<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Scubs\CoreDomainBundle\Entity\Reward" table="reward">
        <id name="id" type="string" column="id">
            <generator strategy="NONE"/>
        </id>
        <field name="startDate" column="start_date" type="datetime"/>
        <field name="gameId" column="game_id" type="string" length="255" nullable="true"/>
        <many-to-one field="cube" target-entity="Scubs\CoreDomainBundle\Entity\Cube">
            <cascade>
                <cascade-persist />
                <cascade-detach />
            </cascade>
            <join-column name="cube_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>