<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Scubs\CoreDomainBundle\Entity\Game" table="game">
        <id name="id" type="string" column="id">
            <generator strategy="NONE"/>
        </id>
        <field name="startDate" column="start_date" type="datetime"/>
        <field name="endDate" column="end_date" type="datetime" nullable="true"/>
        <field name="bet" type="integer"/>
        <field name="visitorJoined" column="visitor_joined" type="boolean" />
        <field name="visitorDeclined" column="visitor_declined" type="boolean" />

        <one-to-many field="turns" target-entity="Scubs\CoreDomainBundle\Entity\Turn" mapped-by="turn">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
        <many-to-one field="local" target-entity="Scubs\CoreDomainBundle\Entity\User" />
        <many-to-one field="visitor" target-entity="Scubs\CoreDomainBundle\Entity\User"/>
        <many-to-one field="winner" target-entity="Scubs\CoreDomainBundle\Entity\User" />

        <many-to-many field="localCube" target-entity="Scubs\CoreDomainBundle\Entity\Cube">
            <join-table name="games_local_cube">
                <join-columns>
                    <join-column name="game_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="cube_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="visitorCube" target-entity="Scubs\CoreDomainBundle\Entity\Cube">
            <join-table name="games_visitor_cube">
                <join-columns>
                    <join-column name="game_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="cube_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>